@model Recipe


<div asp-validation-summary="All"></div>
<div class="form-group">    
    <input type="hidden" class="form-control" readonly asp-for="RecipeId" />
</div>
<div class="form-group">
    <label asp-for="UserName">Your Name:</label>
    <input class="form-control" asp-for="UserName" />
</div>
<div class="form-group">
    <label asp-for="RecipeName">Recipe Name:</label>
    <input class="form-control" asp-for="RecipeName" />
</div>

<div class="form-group">
    <label asp-for="Ingredients">Ingredients:</label><br />
    <textarea class="form-control" cols="100" asp-for="Ingredients" rows="7" placeholder="-Enter Ingredients"></textarea><br>
</div>
<div class="form-group">
    <label asp-for="Process">Process:</label><br />
    <textarea class="form-control" cols="100" asp-for="Process" rows="7" placeholder="-Enter Process"></textarea><br>
</div>


