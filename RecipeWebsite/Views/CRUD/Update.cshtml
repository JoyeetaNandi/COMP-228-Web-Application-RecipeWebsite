@model Recipe

@{
    ViewBag.Title = "Update Recipe";
}

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="RecipeId" />

    <div class="form-group">
        <label asp-for="UserName"></label>
        <div><span asp-validation-for="UserName" class="text-danger"></span></div>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RecipeName"></label>
        <div><span asp-validation-for="RecipeName" class="text-danger"></span></div>
        <input asp-for="RecipeName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <div><span asp-validation-for="Ingredients" class="text-danger"></span></div>
        <textarea asp-for="Ingredients" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Process"></label>
        <div><span asp-validation-for="Process" class="text-danger"></span></div>
        <textarea asp-for="Process" class="form-control"></textarea>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
    </div>
</form>
