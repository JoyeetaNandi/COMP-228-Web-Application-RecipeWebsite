@{
    ViewBag.Title = "Review Recipe";
}
<div class="panel panel-success">
    <div class="panel-heading text-center"><h3>Review Recipe</h3></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="ReviewRecipe" method="post">
            <div class="form-group">
                <label for="rate"> Review </label>
                <select>
                    <option>Choose an option</option>
                    <option>I like This recipe</option>
                    <option>This is not healthy recipe</option>
                </select>
            </div>
            <div class="form-group">
                <label for="txtSpecialReq">Comment:</label><br />
                <textarea id="txtSpecialReq" cols="50" name="txtSpecialReq" rows="7" placeholder="-Please let us know your opinion-"></textarea><br>
            </div>
            <div class=" text-center">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
        <div class="text-center"><h3 style="color:green"><strong>Thanks for visiting our recipe website</strong></h3></div>
    </div>
    </div>

