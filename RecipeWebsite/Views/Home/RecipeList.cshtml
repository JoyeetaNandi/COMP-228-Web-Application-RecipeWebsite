@model IEnumerable<Recipe>

@{
    ViewBag.Title = "Recipe List";
}
<div class="panel panel-success">
    <div class="panel-heading text-center">
        <h4>Here is the list of all recipes</h4>
    </div>
<div class="panel-body">    
    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>               
                <th>Title</th>
                <th>Ingredients</th>
                <th>Process</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Recipe rec in Model)
            {
            <tr>
                @*<td>@rec.RecipeId</td>*@
                @*<td><a asp-action="ViewRecipe" asp-route-recipeId="@rec.RecipeId">@rec.RecipeId</a></td>*@
                <td><a asp-action="ViewRecipe" asp-route-recipeId="@rec.RecipeId">@rec.RecipeName</a></td>
                @*<td><a asp-action="ViewRecipe" asp-route-recipeName="@rec.RecipeName">@rec.RecipeName </ a ></td>*@
                <td>@rec.Ingredients</td>
                <td>@rec.Process</td>

                <td class="text-center">
                    <form asp-action="Delete"  asp-controller="CRUD" method="post">
                        <input type="hidden" name="RecipeId" value="@rec.RecipeId" />

                        <a asp-action="Update" asp-controller="CRUD" class="btn btn-sm btn-warning" asp-route-RecipeId="@rec.RecipeId">
                            Update
                        </a>
                        <br />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                </td>
                <td>
                    <a asp-action="Picture" asp-controller="Picture" class="btn btn-sm btn-warning" asp-route-RecipeId="@rec.RecipeId">
                        Upload Picture
                    </a>
                </td>

            </tr>
            }
        </tbody>        
    </table>   
    </div>
</div>

